{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".plasmo/index.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "compilerOptions": {
    "jsx": "react",
    "paths": {
      "~*": ["./src/*"],
    },
    "baseUrl": ".",
    "typeRoots": [
      "./index.d.ts",
      "./node_modules/@types",
      "./node_modules/@figma",
      "@mastergo/plugin-typings"
    ]
  }
}
